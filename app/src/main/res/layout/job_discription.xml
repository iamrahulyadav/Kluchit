<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cybussolutions.kluchit.Activities.Job_Activity"
    android:background="#f5f5f5">


    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">

    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NEW JOB AVAILABLE "
        android:id="@+id/heading"
        android:layout_below="@+id/app_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:textColor="#623487"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Even Disription : "
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:id="@+id/textView14"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="ACCEPT"
        android:id="@+id/reply"
        android:layout_marginBottom="116dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_button"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="REJECT"
        android:id="@+id/reject"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/reply"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_button"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="OCCUPIED"
        android:id="@+id/busy"
        android:layout_alignBottom="@+id/reject"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/selector_button"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#ffffff" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@id/textView14">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#f3f0f0">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/discription"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/specailatiy"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignEnd="@+id/busy"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#000000" />


</RelativeLayout>
